<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

   <material name="grey">
        <color rgba="0.2 0.2 0.2 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.02115 0 0.01125"/>
    </joint>

    <link name="chassis">
        <!-- Main chassis box -->
        <visual>
            <origin xyz="0.0695 0 0.03425"/>
            <geometry>
                <box size="0.139 0.099 0.0685"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.0695 0 0.03425"/>
            <geometry>
                <box size="0.139 0.099 0.0685"/>
            </geometry>
        </collision>
        <!-- Raspberry pi box-->
        <visual>
            <origin xyz="0.067 0 0.0871"/>
            <geometry>
                <box size="0.056 0.085 0.0372"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.067 0 0.0871"/>
            <geometry>
                <box size="0.056 0.085 0.0372"/>
            </geometry>
        </collision>
        <!-- Caster wheel box -->
        <visual>
            <origin xyz="0.1315 0 -0.02"/>
            <geometry>
                <box size="0.015 0.05 0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.1315 0 -0.02"/>
            <geometry>
                <box size="0.015 0.05 0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.95968" x="0.139" y="0.099" z="0.0685">
            <origin xyz="0.0695 0 0.03425" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Blue</material>    
    </gazebo>

    <!-- LEFT WHEEL LINK-->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.062 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.025"/>
            </geometry>
            <material name="yellow"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0325" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.0257" length="0.025" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Yellow</material>    
    </gazebo>

    <!-- RIGHT WHEEL LINK-->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.062 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.025"/>
            </geometry>
            <material name="yellow"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0325" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.0257" length="0.025" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Yellow</material>    
    </gazebo>

    <!-- CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.1315 0 -0.03625"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0075"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0075"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.01382" radius="0.0075">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/White</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>
